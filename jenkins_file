// Declarative //
pipeline {
    agent any

    stages {
        stage('Create venv') {
            steps {
                sh 'python3 -m venv venv'
                sh 'source venv/bin/activate'
                sh 'pip install --upgrade pip'
            }
        }
        stage('Install tox') {
            steps {
                sh 'sudo pip install --upgrade pip'
                sh 'pip install --user tox'
            }
        }
        stage('lint') {
            steps {
                sh 'tox -e lint'
            }
        }
        stage('Feature Testing') {
            steps {
                sh 'tox -e fea_test'
            }
        }
        stage('Training model') {
            steps {
                sh 'tox -e train_model'
            }
        }
        stage('Predicting model') {
            steps {
                sh 'tox -e predict'
            }
        }
    }
}
